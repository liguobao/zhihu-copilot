{
  "name": "知乎Copilot",
  "version": "0.2.3",
  "description": "显示知乎未读消息，导出回答、文章和想法",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "img/zhihu.svg",
    "default_popup": "popup.html",
    "default_title": "知乎Copilot"
  },
  "permissions": [
    "tabs",
    "alarms",
    "notifications",
    "webNavigation",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.zhihu.com/*"],
      "js": [
        "lib/jszip.min.js",
        "js/common.js",
        "js/dump_answers.js",
        "js/dump_articles.js"
      ]
    }
  ],
  "host_permissions": [
    "https://*.zhihu.com/*"
  ],
  "icons": {
    "16": "img/zhihu.svg",
    "48": "img/zhihu.svg",
    "128": "img/zhihu.svg"
  },
  "options_page": "options.html"
} 